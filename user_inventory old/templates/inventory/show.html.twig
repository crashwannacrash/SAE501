{% block title %}Inventory{% endblock %}

{% block body %}
    <h1>Inventory</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ inventory.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ inventory.username }}</td>
            </tr>
            <tr>
                <th>Profilepicture</th>
                <td>{{ inventory.profilepicture }}</td>
            </tr>
            <tr>
                <th>Streamz</th>
                <td>{{ inventory.streamz }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>{{ inventory.items ? inventory.items|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Gameswon</th>
                <td>{{ inventory.gameswon }}</td>
            </tr>
            <tr>
                <th>Gamesplayed</th>
                <td>{{ inventory.gamesplayed }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_inventory_index') }}">back to list</a>

    <a href="{{ path('app_inventory_edit', {'id': inventory.id}) }}">edit</a>

    {{ include('inventory/_delete_form.html.twig') }}

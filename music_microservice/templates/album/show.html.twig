{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="container">
        <h1>Album</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ album.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ album.name }}</td>
                </tr>
                <tr>
                    <th>Artist</th>
                    <td>{{ album.artist }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ album.date }}</td>
                </tr>
                <tr>
                    <th>Label</th>
                    <td>{{ album.label }}</td>
                </tr>
                <tr>
                    <th>Beatmakers</th>
                    <td>{{ album.beatmakers ? album.beatmakers|join(', ') : '' }}</td>
                </tr>
                <tr>
                    <th>Cover</th>
                    <td>{{ album.cover }}</td>
                </tr>
                <tr>
                    <th>Certification</th>
                    <td>{{ album.certification }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_album_index') }}" class="btn btn-primary">Back to list</a>

        <a href="{{ path('app_album_edit', {'id': album.id}) }}" class="btn btn-warning">Edit</a>

        {{ include('album/_delete_form.html.twig') }}
    </div>
{% endblock %}

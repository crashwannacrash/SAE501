{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="container">
        <h1>Item</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ item.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ item.name }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ item.picture }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ item.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ item.price }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_item_index') }}" class="btn btn-primary">Back to List</a>
        <a href="{{ path('app_item_edit', {'id': item.id}) }}" class="btn btn-warning">Edit</a>

        {{ include('item/_delete_form.html.twig') }}
    </div>
{% endblock %}
